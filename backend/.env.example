# App
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000

# Database
MONGODB_URI=mongodb://localhost:27017/cloudbot

# JWT
JWT_SECRET=your-super-secret-key-change-this-in-production
JWT_EXPIRE=7d
REFRESH_TOKEN_SECRET=another-secret-key-change-this
REFRESH_TOKEN_EXPIRE=30d

# CORS (comma-separated origins, e.g. http://localhost:3001)
CORS_ORIGINS=http://localhost:3001,http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# LLM â€“ Gemini (tried first), then Groq on failure. At least one required for AI-driven bots.
# GEMINI_API_KEY=your_gemini_api_key
# GROQ_API_KEY=your_groq_api_key

# Optional: Multi-channel webhooks (per-bot config can override)
# Twilio (WhatsApp)
# TWILIO_ACCOUNT_SID=
# TWILIO_AUTH_TOKEN=
# TWILIO_WHATSAPP_FROM=whatsapp:+14155238886

# Facebook Messenger
# FACEBOOK_VERIFY_TOKEN=cloudbot_verify
# FACEBOOK_APP_SECRET=

# Slack
# SLACK_SIGNING_SECRET=
